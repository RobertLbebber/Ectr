<!-- Page Content -->
<div class="container">

  <div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

      <!-- Title -->
      <h1 class="mt-4">
        <%= event.org %>
          <a href='<%= event.weblink %>'>
          </a>
      </h1>

      <!-- Cat -->
      <p class="lead">
        Category :
        <%= event.category %>
      </p>

      <hr>

      <!-- Date/Time -->
      <p>
        <%= event.address %>,
          <%= event.zipcode %>
      </p>

      <hr>

      <!-- Preview Image -->
      <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

      <hr>

      <% event.body %>

        <!-- Comments Form -->

        <div class="card my-4">
          <h5 class="card-header">Leave a Comment:</h5>
          <div class="card-body">
            <form action="/Event/createComment" method="POST">
              <div class="form-group">
                <textarea class="form-control" rows="3" id="commentStamp"></textarea>
              </div>

              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>

        <% if(typeof event.comments !== "undefined") {%>
          <% event.comments.forEach(function(e){ %>
            <div class="media mb-4">
              <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
              <div class="media-body">
                <h5 class="mt-0">></h5>
                <%= e.text %>
                  <% e.response.forEach(function(re){ %>
                    <div class="media mt-4">
                      <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                      <div class="media-body">
                        <h5 class="mt-0">Commenter Name</h5>
                        <%= re.text %>

                      </div>
                    </div>
                    <% }); %>
              </div>
            </div>
            <% }); %>
              <% } %>

                <script>
                  var dt = new Date();
                  var utcDate = dt.toUTCString();
                  var cstamp = document.getElementById("commentStamp");
                  cstamp.name = timeStamp;
                  cstamp.value = utcDate;
                </script>

                <!-- Sidebar Widgets Column -->
                <% include sidebar %>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->